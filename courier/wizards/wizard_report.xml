<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <report
            id="wizard_report_id"
            model="wizardr.wizardr"
            string="Wizard Report"
            name="courier.report_wi_id"
            file="courier.report_wi_id"
            report_type="qweb-pdf"
            attachment_use="True"
        />

            <template id="report_wi_id">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="o">
                        <t t-call="web.external_layout">
                            <t t-set="address">
                            <t t-esc="o.sdate"/><br></br>
                            <t t-esc="o.edate"/><br></br>
                            <t t-esc="o.routing_id.name"/><br></br>
                            <t t-esc="o.state"/>
                        </t>
                            <div class="page">

                        <div class="row">
                        <div class="col-12">

                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                    <h2> Wizard Report </h2>
                </t>

                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                        <!-- TODO: remove in master -->
                        <t t-set="colspan" t-value="1"/>
                        <th class="text-left">Start Date</th>
                        <th class="text-left">End Date</th>
                        <th class="text-left">Routing</th>
                        <th class="text-left">Carrier</th>
                        <th class="text-left">State</th>
                    </tr>
                </thead>
                                <tbody class="sale_tbody">
                                    <tr>
                                        <td><span t-esc="o.sdate"/></td>
                                        <td><span t-esc="o.edate"/></td>
                                        <td><span t-esc="o.routing_id.name"/></td>
                                        <td><span t-esc="o.carrier_id.name"/></td>
                                        <td><span t-esc="o.state"/></td>
                                    </tr>

                                </tbody>
                                </table>

                </div>
                </div>

                </div>
                 </t>
            </t>
         </t>

        </template>

    </data>
</odoo>
