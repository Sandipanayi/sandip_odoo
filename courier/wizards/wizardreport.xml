<odoo>
    <data>
        <record id="view_wizard_report" model="ir.ui.view">
        <field name="name">Change Destination Location</field>
        <field name="model">wizardr.wizardr</field>
        <field name="arch" type="xml">
        <form string="Choose New Location">
             <p class="oe_gray">
                        Select
                </p>
                <group>
                        <group>
                                <field name="sdate"/>
                                <field name="edate"/>
                                <field name="routing_id"/>
                        </group>
                        <group>
                                <field name="carrier_id"/>
                                <field name="state"/>

                        </group>
                </group>
                <footer>
                        <button name="Print_Report"
                                string="Print Pdf"
                                type="object"
                                class="btn-primary"/>
                </footer>
        </form>
        </field>
        </record>

        <record id="new_action_wizard" model="ir.actions.act_window">
            <field name="name">Change Destination Location</field>
            <field name="res_model">wizardr.wizardr</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wizard_report"/>
            <field name="target">new</field>
        </record>


        <menuitem id="report_courier_wizard" name="Wizard Report" action="new_action_wizard" parent="Reporting_new"/>


    </data>
</odoo>

