<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <record model="ir.ui.view" id="carrier_form_view">
            <field name="name">Carrier</field>
            <field name="model">carrier.carrier</field>
            <field name="arch" type="xml">
                <form string="carrier Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                 <field name="from_location_id"/>
                            </group>
                            <group>
                                <field name="product_category_id"/>
                                <field name="to_location_id"/>
                            </group>
                            <group string="Provider lines">
                        <notebook>
                            <page string="Provider">
                                    <field name="provider_lines_ids" nolabel="1"/>
                            </page>
                        </notebook>
                    </group>
                       </group>
                    </sheet>
                </form>
            </field>
        </record>


           <record id="viewscarrier_courier_kanban" model="ir.ui.view">
            <field name="name">kanban courier</field>
            <field name="model">carrier.carrier</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="from_location_id"/>
                    <field name="to_location_id"/>
                    <field name="product_category_id"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="row">
                                </div>
                                <div>
                                    <strong>Name: </strong><t t-esc="record.name.value"/>
                                </div>
                                 <div>
                                    <strong>From Location Id: </strong><t t-esc="record.from_location_id.value"/>
                                </div>
                                  <div>
                                    <strong>To Location Id: </strong><t t-esc="record.to_location_id.value"/>
                                </div>
                                  <div>
                                    <strong>Product Category: </strong><t t-esc="record.product_category_id.value"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="carrier_search_view" model="ir.ui.view">
            <field name="name">Routing Search View</field>
            <field name="model">carrier.carrier</field>
            <field name="arch" type="xml">
                <search string="Search Courier">
                    <field name="name"/>
                    <field name="from_location_id"/>
                    <field name="to_location_id"/>
                    <field name="product_category_id"/>

                <!-- <filter string="Male" name="male" domain="[('gender','=','male')]"
                   help="Students with gender as Male"/>
                <filter string="Female" name="female" domain="[('gender','=','female')]"
                   help="Students with gender as Female"/>
                <filter string="Others" name="others" domain="[('gender','=','others')]"
                   help="Students with gender as Others"/> -->
                <group expand="1" string="Group By">
               <filter string="from_location_id" name="from_location_id" context="{'group_by':'from_location_id'}"/>
               <filter string="to_location_id" name="to_location_id" context="{'group_by':'to_location_id'}"/>
           </group>
       </search>
   </field>
</record>


 <record id="pivot_carrier_data" model="ir.ui.view">
         <field name="name">carrier.pivot</field>
         <field name="model">carrier.carrier</field>
         <field name="arch" type="xml">
             <pivot string="carrier data" disable_linking="True">
                 <field name="name" type="row"/>
                 <field name="from_location_id" type="col"/>
                 <field name="to_location_id" type="measure"/>
                 <field name="product_category_id"/>
             </pivot>
         </field>
        </record>

<record id="carrier_report_graph" model="ir.ui.view">
         <field name="name">Carrier Graph</field>
         <field name="model">carrier.carrier</field>
         <field name="arch" type="xml">
             <graph string="Carrier Graph">
                 <field name="name"/>
                 <field name="from_location_id" type="measure"/>
                 <field name="to_location_id"/>
                 <field name="product_category_id"/>
             </graph>
         </field>
        </record>


<record model="ir.ui.view" id="show_carriernew_tree">

                            <field name="name">Carrier</field>
                            <field name="model">carrier.carrier</field>
                            <field name="arch" type="xml">
                            <tree string="carrier_record">
                                <field name="name"/>
                                <field name="product_category_id"/>
                                <field name="from_location_id"/>
                                <field name="to_location_id"/>

                            </tree>
                        </field>
                    </record>



<record model="ir.actions.act_window" id="carrier_list_action">
            <field name="name">Carrier</field>
            <field name="res_model">carrier.carrier</field>
            <field name="view_mode">tree,kanban,graph,search,pivot,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first Record
                </p>
            </field>
        </record>




        <menuitem id="carriernewww_new" name="Carrier" action="carrier_list_action" parent="Configartion_new"/>




</odoo>
