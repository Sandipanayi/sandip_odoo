        <record id="tree_rlocation_tree" model="ir.ui.view">

        <field name="name">Routing Tree</field>

        <field name="model">routing.location</field>

        <field name="arch" type="xml">

                <tree string="Weight/number ratio" editable="bottom">
                        <field name="sequence" widget="handle"/>
                        <field name="name"/>
                        <field name="code"/>
                </tree>

        </field>

</record>


<record model="ir.actions.act_window" id="routinglocation_list_action">
            <field name="name">Routing Location</field>
            <field name="res_model">routing.location</field>
            <field name="view_mode">tree,kanban,graph,search,pivot,form</field>
            <field name="view_id" ref="tree_rlocation_tree"/>

            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first Record
                </p>
            </field>
        </record>




        <menuitem id="Routinglocation_new" name="Routing Location" action="routinglocation_list_action" parent="Configartion_new"/>


</odoo>
