        <record id="tree_productedit_tree" model="ir.ui.view">

        <field name="name">Product Tree</field>

        <field name="model">courier.product.lines</field>

        <field name="arch" type="xml">

                <tree string="Weight/number ratio" editable="bottom">
                        <field name="product_id"/>
                        <field name="qty"/>
                        <field name="total_weight" readonly="True" sum="total"/>
                </tree>

        </field>

</record>

            <record model="ir.actions.act_window" id="productnewnew_list_action">
                <field name="name">product</field>
                <field name="res_model">courier.product.lines</field>
                <field name="view_mode">tree,form</field>
                <field name="view_id" ref="tree_productedit_tree"/>

                <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first Record
                </p>
            </field>
        </record>

        <!-- <menuitem id="productnewnew_new" name="Products" action="action_order_report_all" parent="Courier_new"/> -->



