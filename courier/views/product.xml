<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <record model="ir.ui.view" id="productnew_form_view">
            <field name="name">Product</field>
            <field name="model">courier.product.lines</field>
            <field name="arch" type="xml">
                <form string="product Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id"/>
                            </group>
                            <group>
                                <field name="qty"/>
                            </group>
                            <group>
                                <field name="total_weight" readonly="True"/>
                             </group>
                       </group>
                    </sheet>

                </form>
            </field>
        </record>



